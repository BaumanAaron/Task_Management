  <!-- app/views/task_manager_apps/tasks_within_date_range.html.erb -->

  <h1>Tasks Within Date Range</h1>


  <%= form_tag tasks_within_date_range_path, method: :get do %>
    <%= label_tag 'start_date', 'Start Date:' %>
    <%= date_field_tag 'start_date', params[:start_date] %>

    <%= label_tag 'end_date', 'End Date:' %>
    <%= date_field_tag 'end_date', params[:end_date] %>

    <%= submit_tag 'Filter' %>
  <% end %>

<% @tasks_within_date_range.each do |task_manager_app| %>
    <!-- Display task details as needed -->

  <html>
  <style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #DDD;
  }

  </style>
  <body>
    <table>
    <tr>
       <th>Task</th>
       <th>Description</th>
       <th>Catergory</th>
       <th>Due</th>
       <th>Completed</th>
    </tr>
    <tr>
      <td><%= task_manager_app.task %></td>
      <td><%= task_manager_app.description %></td>
      <td><%= task_manager_app.catergory %></td>
      <td><%= task_manager_app.due %></td>
      <td><%= task_manager_app.completed %></td>
    </tr>
  </table>
  <%= link_to "Back to List", task_manager_apps_path %>
  <% end %>
