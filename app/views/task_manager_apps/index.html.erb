<p style="color: green"><%= notice %></p>

<h1>Task List</h1>
<!DOCTYPE html>
<html>
<style>
table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  padding: 8px;
  text-align: left;
  border-bottom: 1px solid #DDD;
}

</style>
<body>
<table>
<thead>
  <tr>
    <th>Task</th>
     <th>Description</th>
     <th>Catergory</th>
     <th>Due</th>
     <th>Edit</th>
     <th>Delete</th>
     <th>Completed</th>
     
  </tr>
</thead>


  <div id="task_manager_apps">
  <% @task_manager_apps.each do |task_manager_app| %>
  <tbody>
    <td><%= task_manager_app.task %></td>
    <td><%= task_manager_app.description %></td>
    <td><%= task_manager_app.catergory %></td>
    <td><%= task_manager_app.due %></td>
    <td>  <%= link_to "Edit", edit_task_manager_app_path(task_manager_app) %></td>
    <td> <%= button_to "Delete", task_manager_app, method: :delete %></td>
    <td><%= task_manager_app.completed%></td>
    
    
  <% end %>
</div>

</tbody>
</table>
<%= link_to "Create New Task", new_task_manager_app_path %>


